<AnchorPane fx:id="workPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.UI.controllers.WorkPaneController">
   <children>
      <BorderPane>
         <left>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Job:" GridPane.rowIndex="1" />
                  <Label fx:id="jobLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Pay (Â£/hr):" GridPane.rowIndex="2" />
                  <Label fx:id="payLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="workButton" mnemonicParsing="false" onAction="#work" text="Work" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                  <Label text="Current Job:" underline="true" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
               </children>
            </GridPane>
         </left>
         <right>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label text="Job Listings:" underline="true" />
                  <TableView fx:id="jobsTable" />
                  <Button fx:id="applyButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#apply" text="Apply" />
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
